{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "projectlarp"
    },
    "apps": [{
        "root": "src/main/webapp",
        "outDir": "target/www",
        "assets": [
            "assets",
            "i18n",
            "favicon.ico"
        ],
        "index": "index.html",
        "main": "app/main.ts",
        "polyfills": "app/polyfills.ts",
        "tsconfig": "../../../tsconfig.json",
        "prefix": "app",
        "styles": [
            "styles/global.css",
            "styles/vendor.css"
        ]
    }],
    "lint": [{
        "project": "../../../tsconfig.json",
        "exclude": "**/node_modules/**"
    }
    ],
    "defaults": {
        "styleExt": "css",
        "component" : {}
    }
}
